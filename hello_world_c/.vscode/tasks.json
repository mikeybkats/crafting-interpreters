{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-cunit",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-o",
        "mytests",
        "main.c",
        "src/ll_nodes.c",
        "-I/opt/homebrew/include", // Adjust the path to CUnit headers
        "-L/opt/homebrew/lib", // Adjust the path to CUnit library
        "-lcunit"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run-tests",
      "type": "shell",
      "command": "./mytests", // Adjust the name of your executable
      "dependsOn": "build-cunit",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./hello",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
